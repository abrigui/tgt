{% extends 'layoutFront.html.twig' %}

{% block content %}




    <section class="ftco-section ftco-about ftco-no-pt ftco-no-pb ftco-counter" id="section-counter">
        <div class="container consult-wrap">
            <div class="row d-flex align-items-stretch">
                <div class="col-md-6 wrap-about align-items-stretch d-flex">
                    <div class="img" style="background-image: url(../../uploads/article/photo/{{ Articles.image }});"></div>
                </div>
                <div class="col-md-6 wrap-about ftco-animate py-md-5 pl-md-5 fadeInUp ftco-animated">
                    <div class="heading-section mb-4">
                        <span class="subheading">Article by {{ Articles.auteur }}</span>
                        <h2>{{ Articles.titre }}</h2>
                    </div>
                    <p>{{ Articles.description }}</p>
                    <div class="tabulation-2 mt-4">
                        <br>
                        <br>
                        <br>
                        <br>
                        <br>
                        <br>
                        <br>


                         <ul class="nav nav-pills nav-fill d-md-flex d-block">
                             {% if app.user %}
                                 {% if Articles.Rated == "none" %}
                                     <li class="nav-item" ><a class="nav-link  py-2" href="{{ path('rate',{ 'id': Articles.id ,'type':'Like'}) }}"> Like <i class="fa fa-thumbs-o-up" aria-hidden="true"> </i> </a></li>
                                     <li class="nav-item" ><a class="nav-link py-2" href="{{ path('rate',{ 'id': Articles.id ,'type':'Dislike'}) }}"> Dislike <i class="fa fa-thumbs-o-down" aria-hidden="true"></i> </a></li>
                                 {% elseif Articles.Rated == "Like" %}
                                     <li class="nav-item" ><a class="nav-link active py-2" href="{{ path('rate',{ 'id': Articles.id ,'type':'Like'}) }}">Like <i class="fa fa-thumbs-up" aria-hidden="true"> </i> </a></li>
                                     <li class="nav-item" ><a class="nav-link  py-2" href="{{ path('rate',{ 'id': Articles.id ,'type':'Dislike'}) }}">Dislike <i class="fa fa-thumbs-o-down" aria-hidden="true"></i> </a></li>
                                 {% elseif Articles.Rated == "Dislike"  %}
                                     <li class="nav-item" ><a class="nav-link  py-2" href="{{ path('rate',{ 'id': Articles.id ,'type':'Like'}) }}" >Like <i class="fa fa-thumbs-o-up" aria-hidden="true"> </i> </a></li>
                                     <li class="nav-item" ><a class="nav-link active py-2" href="{{ path('rate',{ 'id': Articles.id ,'type':'Dislike'}) }} ">Dislike <i class="fa fa-thumbs-down" aria-hidden="true"></i></a></li>
                                 {% endif %}
                             {% endif %}


                         </ul>

                    </div>
                    <div class="row mt-5">
                        <div class="col-md d-flex justify-content-center counter-wrap ftco-animate fadeInUp ftco-animated">
                            <div class="block-18">
                                <div class="icon"><span class="flaticon-doctor"></span></div>
                                <div class="text">
                                    <strong class="number" >{{ Articles.likes }}</strong>
                                    <span>Likes</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md d-flex justify-content-center counter-wrap ftco-animate fadeInUp ftco-animated">
                            <div class="block-18">
                                <div class="icon"><span class="flaticon-doctor"></span></div>
                                <div class="text">
                                    <strong class="number" >{{ Articles.dislikes }}</strong>
                                    <span>Dislikes</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md d-flex justify-content-center counter-wrap ftco-animate fadeInUp ftco-animated">
                            <div class="block-18">
                                <div class="icon"><span class="flaticon-doctor"></span></div>
                                <div class="text">
                                    <strong class="number" >{{ nbcomment.nb }}</strong>
                                    <span>Comments</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container container-fluid">

                    <div class="row">

                        <!-- Post Content Column -->
                        <div class="col-lg-8">

                            <!-- Title -->




                            <!-- Comments Form -->
                            <div class="card my-4">
                                <h5 class="card-header">Commenter l' Article:</h5>
                                <div class="card-body">
                                    {{ form_start(f) }}
                                    {{ form_row(f.contenu, { 'value': '' }) }}
                                    {{ form_row(f.commenter) }}
                                    {{ form_end(f)}}

                                </div>
                            </div>

                            {% for commentaire in Commentaires %}
                                {% if commentaire.Article.id ==  Articles.id%}
                                <!-- Single Comment -->
                                <div class="media mb-4">
                                    <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
                                    <div class="media-body">
                                        <h5 class="mt-0">{{ commentaire.utilisateur.username }}</h5>
                                        <small>{#{{ commentaire.date | date('d/m/y') }}  Ã  {{ commentaire.date |date('H:i') }}#}</small>
                                        <div>{{ commentaire.getContenu() }}</div>
                                        {% if app.user.id == commentaire.utilisateur.id %}
                                        <a href="{{ path('delete_comment_article',{'id': commentaire.id , 'idarticle' : Articles.id}) }}"><button type="button" class="btn btn-primary">Supprimer</button></a>
                                        {% endif %}
                                    </div>
                                </div>
                                <hr>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </section>



