{% extends 'layoutFront.html.twig' %}
{% form_theme f 'bootstrap_4_layout.html.twig' %}

{% block content %}
    <br><br>
    <center><h1>Modifier Agence</h1></center>
    <center>
        <br>
        <div>
            <div class="container">
                <table class="table table-borderless">
                    <thead>
                    </thead>
                    <br><br>
                    <center>
                        {{form_start(f)}}
                        <label>Nom:</label>
                        {{ form_widget(f.nom) }}
                        <br>
                        <label>Matricule Fiscale:</label>
                        {{ form_widget(f.matriculeFiscale) }}
                        <br>
                        <label>Adresse:</label>
                        {{ form_widget(f.adresse) }}
                        <br>
                        <label>Telephone:</label>
                        {{ form_widget(f.telephone) }}
                        <br>
                        <label>Fax:</label>
                        {{ form_widget(f.fax) }}
                        <br>
                        <label>Site:</label>
                        {{ form_widget(f.site) }}
                        <br>
                        <label>Email:</label>
                        {{ form_widget(f.email) }}
                        <br>

                        <label>Sponsor:</label>
                        {{ form_widget(f.sponsor) }}
                        <br>
                        <label>Logo:</label>
                        {{ form_widget(f.logo) }}
                        <br>
                        {{ form_widget(f.Ajouter,{'label':'Modifier'}) }}
                        {{form_end(f)}}
                </table>
                <br><br>
            </div>
        </div>
    </center>
{% endblock %}